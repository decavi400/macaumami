

<!DOCTYPE html>
<html data-ng-app="ngapp">

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @*<title>@ViewBag.Title - 我的 ASP.NET 應用程式</title>*@
    <base href="/" />
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css" rel="stylesheet" />
    <link type="text/css" rel="stylesheet" href="../css/css.css" />
    <link rel="icon" id="favicon" href="../favicon.ico" type="image/x-icon" />
    <title>臺灣師範大學國語教學中心</title>
    <style>
        .interval {
            padding-top: 5px;
        }

        .clear {
            clear: both;
        }

        .pointer {
            cursor: pointer;
        }

            .pointer:hover {
                color: Blue;
            }
    </style>
    @*@Styles.Render("~/Content/css")*@
    @Scripts.Render("~/bundles/modernizr")

    @RenderSection("top_script", required: false)

    @RenderSection("top_style", required: false)
</head>


<body>

        <div class="cover"></div>
        <div class="top">
            <div class="top_wrap">
                <div class="logo">
                    <a href="~/Apps/Main.aspx" runat="server">
                        MTC Online<p>Mandarin Training Center</p>
                    </a>
                </div>
                <div class="logout">
                    @*<asp:HyperLink ID="hylLogout1" runat="server" Text="登出" onclick="javascript:return confirm('Are you sure you want to Logout?');"></asp:HyperLink>*@
                    <a href="javascript:void(0)" onclick="javascript:return confirm('Are you sure you want to Logout?');">登出</a>
                </div>
                <div class="clear"></div>
                <ul class="menu" data-ng-controller="backend_default" data-ng-init="Init()">
                    <li ng-repeat="m1 in menuList">
                        <a href="{{m1.url}}">
                            <img src="../../images/M_home.png"  />
                            {{m1.name}}
                        </a>
                    </li>


                    @*<asp:Literal ID="litMENU" runat="server"></asp:Literal>*@
                    <div class="rwd_logout">
                        @*<asp:HyperLink ID="hylLogout2" runat="server" Text="登出" onclick="javascript:return confirm('Are you sure you want to Logout?');"></asp:HyperLink>*@
                        登出
                    </div>
                    <div class="clear"></div>
                </ul>
                <div class="rwd_menu_btn"><span></span></div>
            </div>
        </div>
        <!--end top-->

    <div style="width: 1366px; margin: 0 auto;">
        <div class="content">
            <div class="content_wrap">
                <div class="path">
                    <a href="#">
                        <span id="labMODELNM">XXX</span>
                    </a>
                    &gt;
                    <span id="labPGMNM">XXXXXX</span>
                </div>
                <div class="title">
                    <div class="title_icon">
                        <img id="imgPGMPIC" src="../../images/M_account.png">
                        <span id="labProgramPIC"></span>
                    </div>
                    <div class="title_name">
                        <span id="labTitleName2">XXXX設定</span>
                    </div>
                </div>

                @RenderBody()
            </div>
            </div>
            </div>
            <!--end content-->





            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/bootstrap")
            <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.5.8/angular.js"></script>
            <script src="https://angular-ui.github.io/bootstrap/versioned-docs/1.3.3/ui-bootstrap-tpls-1.3.3.js"></script>
            @Scripts.Render("~/bundles/myscript/main")
            <script src="../../MyScripts/admin_layout.js"></script>
            @RenderSection("bot_script", required: false)

            <script>
                $(".rwd_menu_btn").click(function () {
                    $(this).toggleClass('close');
                    $(".menu").slideToggle(300);
                    $("body").toggleClass('overflow');
                    $(".cover").fadeToggle(300);
                });
                $(".menu > li").hover(function () {
                    $(this).children(".submenu").stop().slideToggle(30);
                });
            </script>

</body>

</html>
